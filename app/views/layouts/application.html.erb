<!DOCTYPE html>
<html>
  <head>
    <title>Tabs</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
	<div class='sidebar'>
        <% if current_user %>
          <%= link_to "<div class=#{current_page?(user_path(current_user)) ? 'home-page-option' : 'sidebar-options'}>HOME</div>".html_safe, user_path(current_user), class: 'sidebar-link'%>
        <% end %>
        <%= link_to "<div class=#{current_page?(tabs_path) ? 'home-page-option' : 'sidebar-options'}>TABS</div>".html_safe, tabs_path, class: 'sidebar-link' %>
        <%= link_to "<div class=#{current_page?(new_tab_path) ? 'home-page-option' : 'sidebar-options'}>NEW TAB</div>".html_safe, new_tab_path, class: 'sidebar-link' %>
      </div>
  <body>
    <!--<div style='margin-top: 70px;'></div>-->
    <div id='yield-column'>
      <div id='tabs-navbar' class="navbar navbar-inverted navbar-fixed-top">
        <div class="container-fluid">
            <% if current_user.nil? %>
              <%= link_to "<i class='fa fa-sign-in' style='font-size: 30px;' aria-hidden='true'></i>".html_safe, new_user_session_path, class: 'pull-right navbar-options' %>
          <% else %>
            <%= link_to "<i class='fa fa-sign-out' style='font-size: 30px;' aria-hidden='true'></i>".html_safe, destroy_user_session_path, method: :delete, class: 'pull-right navbar-options', id: 'logout-option' %>
            <%= link_to "<i class='fa fa-user' style='font-size: 30px;' aria-hidden='true'></i>".html_safe, current_user, class: 'pull-right navbar-options'%>
          <% end %>
        </div>
      </div>
    	<%= yield %>
    </div>
  </body>
</html>
